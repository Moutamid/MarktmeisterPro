<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".activities.SavedImagesActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:cardBackgroundColor="@color/background"
        app:cardElevation="8sp"
        app:cardCornerRadius="0sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back"
                android:layout_marginStart="12sp"
                app:tint="@color/dark" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5sp"
                android:src="@drawable/markt_schwarz"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12sp">

        <ImageView
            android:id="@+id/sort"
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:layout_centerInParent="true"
            android:src="@drawable/round_filter_list_24"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/sort"
            android:layout_weight="1"
            android:gravity="center"
            android:text="GeschÃ¤ftsname"
            android:textColor="@color/dark"
            android:textSize="26sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12sp">

        <ImageView
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            android:src="@drawable/round_filter_list_24"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/applicationID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="22-0153431"
            android:textColor="@color/dark"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12sp">

        <TextView
            android:id="@+id/totalSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/filter"
            android:gravity="start|center"
            android:text="You have saved 3 images"
            android:textColor="@color/dark"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/filter"
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/round_filter_alt_24" />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/savedRC"
        android:layout_width="match_parent"
        app:spanCount="2"
        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
        tools:listitem="@layout/image_layout2"
        android:layout_height="match_parent" />

</LinearLayout>